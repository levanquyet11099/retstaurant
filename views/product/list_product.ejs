
  <%- include('../layout/head.ejs') %>
  <%- include('../layout/mid.ejs') %>
  <h1>Danh sách món ăn</h1>
  <% if (user) { %>
    <p class="welcome-message">Welcome, <%= user.username %>!</p>
    <div class="centered-element"> <a href="/api/v1/product/add_product" class="button"  >Thêm món ăn</a></div>
    <br></br>
    <form class="right-align" action="/logout" method="get"> 
      <button type="submit" class="button">Logout</button>
    </form>
    <div class="centered-element"> 
      <form action="/api/v1/product/searchproduct" method="post"> 
        <input type="text" id="searchproduct" name="searchproduct" placeholder="Tìm món ăn ...">
        <button type="submit" class="button">Tìm món ăn</button>
      </form>
      
    </div>
    <ul>
      <% products.forEach(product => { %>
        <li>
          <article class="card product-item">
            <div class="card__image">
              <img src="<%= product.image %>" alt="<%= product.name %>">
            </div>
            <div class="card__content">
              <h2 class="product__price">Tên: <%= product.name %></h2>
              <h2 class="product__price">Giá: <%= product.price %></h2>
              <p class="product__description"> Mô tả: <%= product.description %></p>
            </div>
            <div class="card__actions">            
              <ul> 
                <form action="/api/v1/product/update/<%= product.id_product %>" method="get"> 
                        <button type="submit" class="button">Sửa</button>
                </form>
                <form action="/api/v1/product/Delete/<%= product.id_product %>" method="post"> 
                        <button type="submit" class="button">Xóa món ăn</button>
                </form> 
              </ul>
            </div>
          </article>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <div class="centered-element"> <a href="/login" class="button"  >Login</a></div>
    
    <ul>
      <% products.forEach(product => { %>
        <li>
          <article class="card product-item">
            <div class="card__image">
              <img src="<%= product.image %>" alt="<%= product.name %>">
            </div>
            <div class="card__content">
              <h2 class="product__price">Tên: <%= product.name %></h2>
              <h2 class="product__price">Giá: Liên hệ</h2>
              <p class="product__description"><%= product.description %></p>
            </div>
          </article>
        </li>
      <% }); %>
    </ul>
  <% } %>
  <ul>
    
</ul>

</body>
</html>
